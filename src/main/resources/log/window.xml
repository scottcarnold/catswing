<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO" packages="org.xandercat.swing.log">
	<Appenders>
		<WindowAppender name="window">
			<PatternLayout pattern="%d %-5p %c{1} - %m%n"/>
		</WindowAppender>
	</Appenders>
	<Loggers>
		<Root level="[level]">
			<AppenderRef ref="window" />
		</Root>
	</Loggers>
</Configuration>